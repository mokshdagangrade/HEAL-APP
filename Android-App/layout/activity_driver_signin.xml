<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Heal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bg_purple_svg" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:rotation="180"
        app:srcCompat="@drawable/ic_bg_purple_svg" />

    <EditText
        android:id="@+id/inputemail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="364dp"
        android:layout_marginRight="48dp"
        android:drawableLeft="@drawable/ic_baseline_email_blue_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Email"
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="@color/purple_200"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/inputdripassword"
        android:layout_width="244dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="48dp"
        android:drawableLeft="@drawable/ic_baseline_lock_blue_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Password"
        android:includeFontPadding="false"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/purple_200"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/rectbackground"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="LOGIN"
        android:textAllCaps="false"
        android:textColor="#F4EEEE"
        android:textSize="22sp"
        app:backgroundTint="@color/purple_200" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/ic_icon_bg_purple_2"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_google_sign_in"
            android:layout_width="124dp"
            android:layout_height="54dp"
            android:layout_marginEnd="25dp"
            android:text="Google"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/PhoneButton"
            android:layout_width="106dp"
            android:layout_height="45dp"
            android:background="@color/cardview_light_background"
            android:drawableLeft="@drawable/ic_baseline_phone_dark"
            android:drawableTint="@color/purple_200"
            android:padding="10dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/userAvatarBG" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="32dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="552dp"
        android:layout_marginEnd="189dp"
        android:fontFamily="@font/poppinssemi"
        android:gravity="center"
        android:text="or"
        android:textColor="@color/purple_200"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="296dp"
        android:fontFamily="@font/poppinssemi"
        android:text="LOGIN"
        android:textColor="@color/purple_200"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemi"
            android:text="Don't have an account?"
            android:textColor="#2F2E41"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppinssemi"
            android:gravity="center"
            android:text="Sign up"
            android:textColor="@color/purple_200"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>